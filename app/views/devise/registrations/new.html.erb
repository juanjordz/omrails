<center><div style="width:500px"><h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => newUser_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  	<%= f.input :name %>
	<%= f.input :email %>
  	<%= f.input :password %>
  	<%= f.input :rfc %>
  	<%= f.input :password_confirmation%>
  	<%= f.input :company%>
</div>
  <div><%= f.submit "Sign up", :class => "btn btn-primary"%></div>
<% end %>

<%= render "devise/shared/links" %>
</center>