<!-- ====================subintro==================== -->
<section id="subintro">
<div class="jumbotron subhead" id="overview">
	<div class="container">
		<div class="row">
			<div class="span12">
				<div class="centered">
					<h3>Log in</h3>
					<p>
						Escribe el correo electrónico y contraseña que se registró.
					</p>
					<br/>
					<p>
						¿No se ha registrado? <%= link_to "Sign up", new_company_path(resource_name) %>
					</p>
				</div>
			</div>
		</div>
	</div>
</div>
</section>


<center><div style="width:500px">


<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-horizontal'}) do |f| %>
  
  <%= f.input :email, :max => 3 %>
  <%= f.input :password, :max => 3 %>

  <%= f.input :remember_me, :as => :boolean, :max => 3%>

  
</div>
  <div class="form-actions">
  	<%= f.submit "Sign in", :class => "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</center>