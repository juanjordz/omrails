
	<%= simple_form_for(@factura, :html => {:class => "form-horizontal"}) do |f| %>
		<%= f.error_notification %>
			<div class="form-inputs">
			  	<%=  f.input :nombreEmisor, :label => "Nombre del emisor", :readonly => true,  :input_html => { :value => @empresaNombre.first.name } %>
			   	<%=  f.input :rfcEm, :label => "RFC del emisor" , :readonly => true,  :input_html => { :value => @empresaNombre.first.rfc }%>
			   	<%=  f.input :nombreReceptor, :label => "Nombre del receptor" %>
			   	<%=  f.input :rfcRe, :label => "RFC del receptor" %>

			  	<%=  f.input :serie, :label => "Serie" %>
			   	<%=  f.input :folio, :label => "Folio" %>
			   	<%=  f.input :formaDePago, :label => "Forma de pago" %>
			  	<%=  f.input :metodoDePago, :label => "Método de pago" %>
			   	<%=  f.input :numCtaPago, :label => "Número de Cuenta" %>
			   	<%=  f.input :lugarExpedicion, :label => "Lugar de expedición" %>
			   	<%=  f.input :anoAprobacion, :label => "Año de aprobación"  %>
			   	<%=  f.input :noCertificado, :label => "Numero de certificado"  %>
			   	
			   	<%=  f.input :total, :label => "total" %>
				<%=  f.input :subTotal, :label => "subTotal" %>
				<%=  f.input :usuario_id, :label => "Id de usuario", :as => :hidden,  :input_html => { :value => current_usuario.id } %>
				<%=  f.input :fechaExpedicion, :label => "Fecha y hora de expedicion", :width => "10px" %>
			</div>
		<div class="form-actions">
			<%= f.button :submit %>
		</div>
	<% end %>
