<%= simple_form_for(@user, :html => {:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  	<%= f.input :name %>
  	<%= f.input :email %>
	<%= f.input :company_id, collection: Company.all, prompt: "Select your company", hint: "#{link_to 'Didn\'t find your company name?', new_company_path()}"%>  	
	<%= f.input :role %>
    <%= f.button :submit, :class => "btn btn-primary"%>
<% end %>
